
BUILD=DEBUG
PLATFORM=WIN32

ifeq ($(PLATFORM), x64)
TOOLS_DIR = $(XLW)/xlw/bin64
else
TOOLS_DIR = $(XLW)/xlw/bin
endif

all: autogenerated
	$(MAKE) -f ./XLL.mak BUILD=$(BUILD) PLATFORM=$(PLATFORM)
	
clean:
	$(MAKE) -f ./XLL.mak BUILD=$(BUILD) PLATFORM=$(PLATFORM) clean
	@echo Removing ../common_source/xlwWrapper.cpp
	@$(RM) ../common_source/xlwWrapper.cpp
	
	
autogenerated :../common_source/xlwWrapper.cpp

../common_source/xlwWrapper.cpp:  ../common_source/cppinterface.h
		"$(TOOLS_DIR)/InterfaceGenerator"  ../common_source/cppinterface.h ../common_source/xlwWrapper.cpp
	
rebuild: clean all